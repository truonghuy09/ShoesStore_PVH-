@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Brand Listed";
  
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h4>
        List Role
    </h4>
    <a asp-action="Create" asp-controller="Role" class="btn btn-warning">Add Role</a>
    <table class="table" id="myTable">
        <thead>


            <tr>
                <th scope="col">Id</th>
                <th scope="col">Role Name</th>
                <th scope="col">Role</th>

                <th scope="col">Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Name</td>
                    <td>
                        <a style="margin-right:5px;" class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role" asp-route-Id="@item.Id">Delete</a>

                    </td>

                </tr>

            }

        </tbody>
    </table>

</body>

@section Scripts {
    <script>
        let table = new DataTable('#myTable');
    </script>
}



</html>

