<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

</head>
<body>
    <h4>
        List Categories
    </h4>
<a asp-action="Create" asp-controller="Category" class="btn btn-warning">Add Category</a>
    <table class="table" id="myTable">
    <thead>


        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>

            <th scope="col">Category Slug</th>
            <th scope="col">Category Status</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
 
                <td>@item.Slug</td>
                <td>
                    @if(item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-danger">Ẩn</span>
                    }
                </td>

                <td>
                    <a class="btn btn-warning btn-sm " asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                </td>

            </tr>

        }

    </tbody>
</table>
</body>

