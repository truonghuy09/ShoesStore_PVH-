@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

    <h4>List Products</h4>
    <a  asp-action="Create" asp-controller="Product" class="btn btn-warning">Add Product</a>
    <table class="table" id="myTable">
        <thead>


            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Product Quantity</th>
                <th scope="col">Product Sold</th>
                <th scope="col">Product Description</th>
                <th scope="col">Product Price</th>
                <th scope="col">Product Image</th>
                <th scope="col">Product Slug</th>
                <th scope="col">Product Category</th>
                <th scope="col">Product Brand</th>
                <th scope="col">Product Mange</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th @* scope="row" *@>@item.Id</th>
                    <td>@item.Name</td>
                    <td><b>@item.Quantity</b><br /><a asp-action="AddQuantity" asp-controller="Product" asp-route-Id="@item.Id">Add Quantity</a></td>
                    <td><b>@item.Sold</b></td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/media/products/@item.Image" width="120" /></td>
                    <td>@item.Slug</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Brand.Name</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
                    </td>

                </tr>

            }

        </tbody>
    </table>
</body>

@section Scripts{
    <script>
        let table = new DataTable('#myTable');
    </script>
}
</html>




