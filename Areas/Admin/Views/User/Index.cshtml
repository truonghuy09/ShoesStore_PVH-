
@{
    ViewData["title"] = "List User";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

</head>
<body>
    <h4>
        List User
    </h4>




    <a asp-action="Create" asp-controller="User" class="btn btn-warning">Add User</a>
    <table class="table" id="myTable">
        <thead>


            <tr>
                <th scope="col">Id</th>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>

                <th scope="col">PasswordHash</th>
                <th scope="col">Phone Number</th>

                <th scope="col">Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userWithRoles in Model)
            {
                <tr>
                    <td>@userWithRoles.User.Id</td>
                    <td>@userWithRoles.User.UserName</td>
                    <td>@userWithRoles.User.Email</td>
                    <td>@userWithRoles.User.PasswordHash</td>
                    <td>@userWithRoles.User.PhoneNumber</td>
                    <td>@userWithRoles.RoleName</td>
                    <td style="    display: flex;flex-direction: row;padding-bottom: 58px;">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@userWithRoles.User.Id">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@userWithRoles.User.Id">Delete</a>
                    </td>
                    `
                </tr>

            }

        </tbody>
    </table>

</body>


@section Scripts {
    <script>
        let table = new DataTable('#myTable');
    </script>
}

</html>

