
@{
   int  index = 0;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .carousel-inner .item {
            position: relative;
            width: 100%;
            height: 350px; /* Hoặc tùy chỉnh chiều cao */
            padding-left: 0;
        }

            .carousel-inner .item img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Đảm bảo ảnh bao phủ toàn bộ khối */
                object-position: center center; /* Căn giữa ảnh theo cả chiều ngang và chiều dọc */
                margin-right: 20%;

            }


    </style>
</head>
<body>


    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            
                            @foreach(var slider in ViewBag.Sliders)
                            {
                            <div class="item @(index == 0 ? "active":"")">
                                <div class="col-sm-12">
                                    <img src="~/media/sliders/@slider.Image" class="girl img-responsive" width="100%" />
                                </div>

                                </div>
                                index++;

                            }

                        </div>

                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <!--/slider-->


</body>
</html>




